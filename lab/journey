        @keyframes scorePop {
            0% { opacity: 0; transform: translate(-50%, -50%) scale(0.5); }
            50% { opacity: 1; transform: translate(-50%, -80%) scale(1.2); }
            100% { opacity: 0; transform: translate(-50%, -120%) scale(0.8); }
        }

        #audio-player {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
